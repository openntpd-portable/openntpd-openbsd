#!/bin/ksh
#
# $OpenBSD: spamd,v 1.10 2018/01/11 21:09:26 rpe Exp $

daemon="/usr/libexec/spamd"

. /etc/rc.d/rc.subr

pexp="spamd: \[priv\].*"
rc_reload=NO

rc_pre() {
	if [[ ${spamd_black} != NO ]]; then
		daemon_flags="-b ${daemon_flags}"
		spamd_setup_flags="-b"
	fi
}

rc_start() {
	${rcexec} "${daemon} ${daemon_flags}" || return 1
	/usr/libexec/spamd-setup -D ${spamd_setup_flags}
}

rc_cmd $1
