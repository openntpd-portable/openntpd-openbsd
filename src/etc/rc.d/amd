#!/bin/sh
#
# $OpenBSD: amd,v 1.4 2011/08/22 08:02:04 nicm Exp $

daemon="/usr/sbin/amd"

. /etc/rc.d/rc.subr

rc_reload=NO
rc_restart=NO
rc_stop=NO

rc_pre() {
	[ -e ${amd_master} ] || return 1
	daemon_flags=$(print -rn -- $(< ${amd_master}))
}

rc_start() {
	${rcexec} "cd /etc/amd; ${daemon} ${daemon_flags}"
}

rc_cmd $1
